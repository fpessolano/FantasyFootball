<CreateNewGame>
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        BoxLayout
            id: league_definition
            orientation: 'vertical'
            padding: [10,50,10,50]
            spacing: 10
            size_hint_y: 0.9
            Label:
                text: 'League definition'
                font_size: 32
                color: 255, 255, 255, 1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'League name'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: name
                    text: 'MyLeague'
                    halign: 'center'
                    multiline: False
                    font_size: 18
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Number of teams'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: numberTeams
                    text: '16'
                    halign: 'center'
                    multiline: False
                    font_size: 18
                    text_size: root.width-20, 20
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Number of relegated teams'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: relegationZone
                    text: '3'
                    halign: 'center'
                    multiline: False
                    font_size: 18
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Create'
                font_size: 18
                on_press: root.createGame()
            Button:
                text: 'Back'
                font_size: 18
                on_press: root.goBack()