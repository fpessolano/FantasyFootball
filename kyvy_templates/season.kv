<SeasonPlay>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        BoxLayout:
            size_hint_y: 0.9
            padding: 10
            Label:
                id: matches
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: 'match results'
                color: 255, 255, 255, 1
            Label:
                id: standings
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: 'standings'
                color: 255, 255, 255, 1
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: 'Next match'
                background_color: 0, 1, .4, .85
                font_size: 18
            Button:
                text: 'Finish Season'
                background_color: 1, 1, .0, .85
                font_size: 18
            Button:
                text: 'Quit'
                font_size: 18
                background_color: 1, 0, .4, .85
                on_press: root.quit()