<StandingsRowCell@Label>:
    text_size: self.size
    padding_x: 0
    halign: 'center'
    valign: 'middle'
    color: 255, 255, 255, 1

<StandingsRowNameCell@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    color: 255, 255, 255, 1

<StandingsRow>:
    GridLayout:
        cols: 12
        spacing: (0,0)
        StandingsRowNameCell:
            id: name
            text: "NAME"
            size_hint_x: 4
        StandingsRowCell:
            id: mp
            text: "MP"
        StandingsRowCell:
            id: w
            text: "W"
        StandingsRowCell:
            id: d
            text: "D"
        StandingsRowCell:
            id: l
            text: "L"
        StandingsRowCell:
            id: gf
            text: "GF"
        StandingsRowCell:
            id: ga
            text: "GA"
        StandingsRowCell:
            id: gd
            text: "GD"
        StandingsRowCell:
            id: pt
            text: "PT"

<SeasonPlay>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        Label:
            id: title
            text: 'Competition is pppp'
            font_size: 40
            bold: True
            halign: 'center'
            size_hint_y: 0.2
            color: 255, 255, 255, 1
        BoxLayout:
            size_hint_y: 0.7
            padding: 10
            ScrollView:
                Label:
                    id: matches
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    text: 'match results'
                    color: 255, 255, 255, 1
            ScrollView:
                GridLayout:
                    id: standings
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height: dp(26)
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: 'Next match'
                background_color: 0, 1, .4, .85
                font_size: 18
            Button:
                text: 'Finish Season'
                background_color: 1, 1, .0, .85
                font_size: 18
            Button:
                text: 'Quit'
                font_size: 18
                background_color: 1, 0, .4, .85
                on_press: root.quit()