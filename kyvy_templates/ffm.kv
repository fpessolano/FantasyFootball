#:kivy 2.0.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<SplashScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './assets/cover.jpg'

<FantasyManager>
    canvas.before:
        Color:
            rgba:(1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    SplashScreen:
        id: spash_screen
        name: 'spash_screen'
    StartGame:
        id: start_screen
        name: 'start_screen'
    CreateNewGame:
        id: new_screen
        name: 'new_screen'
    SeasonPlay:
        id: season_screen
        name: 'season_screen'
