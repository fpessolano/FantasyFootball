#:kivy 2.0.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<SeasonPlay>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        BoxLayout:
            size_hint_y: 0.9
            padding: 10
            Label:
                id: matches
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: 'match results'
                color: 255, 255, 255, 1
            Label:
                id: standings
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: 'standings'
                color: 255, 255, 255, 1
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: 'Next match'
                font_size: 18
            Button:
                text: 'Finish Season'
                font_size: 18
            Button:
                text: 'Quit'
                font_size: 18
                on_press: root.quit()

<StartGame>
    GridLayout:
        cols: 2
        padding: 5
        spacing: 5
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.45
            Button:
                text: 'New Game'
                font_size: 18
                size_hint_y: 0.1
                pos_hint: {'center_x': 0.5}
                size_hint_x: 0.5
                on_press: root.newGame()
            Label:
                size_hint_y: 0.45
        BoxLayout:
            id: saveGame
            orientation: 'vertical'

<CreateNewGame>
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        BoxLayout
            id: league_definition
            orientation: 'vertical'
            padding: [10,50,10,50]
            spacing: 10
            size_hint_y: 0.9
            Label:
                text: 'League definition'
                font_size: 32
                color: 255, 255, 255, 1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'League name'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: name
                    text: 'MyLeague'
                    halign: 'center'
                    multiline: False
                    font_size: 18
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Number of teams'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: numberTeams
                    text: '16'
                    halign: 'center'
                    multiline: False
                    font_size: 18
                    text_size: root.width-20, 20
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Number of relegated teams'
                    halign: 'center'
                    font_size: 18
                    color: 255, 255, 255, 1
                TextInput:
                    id: relegationZone
                    text: '3'
                    halign: 'center'
                    multiline: False
                    font_size: 18
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Create'
                font_size: 18
                on_press: root.createGame()
            Button:
                text: 'Back'
                font_size: 18
                on_press: root.goBack()

<FantasyManager>
    canvas.before:
        Color:
            rgba:(1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    StartGame:
        id: start_screen
        name: 'start_screen'
    CreateNewGame:
        id: new_screen
        name: 'new_screen'
    SeasonPlay:
        id: season_screen
        name: 'season_screen'
